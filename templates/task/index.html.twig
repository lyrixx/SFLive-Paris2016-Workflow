{% extends 'task/layout.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-md-6">
            <h1>Task list</h1>
            <ul class="list-unstyled">
                {% for task in tasks %}
                    <li>
                        <a href="{{ path('task_show', {id: task.id}) }}">
                            {{ task.title }}
                        </a>
                    </li>
                {% else %}
                    <li>
                        <p>
                            No task found, add one?
                        </p>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Add new task</h2>
            <form action="{{ path('task_create') }}" method="post"  class="form-inline">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" value="{{ tasks ? "Tasks #{(tasks|length) + 1}" : "My first task" }}" class="form-control" />
                </div>
                <button type="submit"  class="btn btn-default">create</button>
            </form>
        </div>
    </div>
{% endblock %}
